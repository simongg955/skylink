<style>


    .row {
        text-align: center;
        color: white !important;
        margin-top: 2px;
        margin-bottom: 2px;


    }

    .form-control {
        width: 100%;
        height: 6%;
        color: black !important;
        text-shadow: 3px 2px 3px gray;
        text-align: center;
        font-weight: bold;
    }

    .table-responsive {
        border-radius: 10px;
        border-color: black;
        border-style: solid;
        border-width: 2px;
        box-shadow: rgb(160, 160, 160) 10px 10px 10px;
        margin-right: 10px;
        margin-left: 10px;
        background-color: #25292d !important;

    }

    .cancelar {
        text-decoration: none;
        color: black !important;
    }
    
    .cancelarbtn:hover {
        background-color: red !important;
    }

    .editar {
        cursor: pointer;
    }

    .editar:hover {
        background-color: blue !important;
    }
</style>

<div class="table-responsive">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">editar noticia</h4>
                </div>

                <div class="card-body">

                    <form action="/editarnoticias" method="post">
                        {{#each editarnoticiasById}}


                        <div class="row" style="display: none;">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="id_noticias" class="col-form-label">id_noticias:</label>
                                    <input class="form-control" type="int" name="id_noticias" value="{{id_noticias}}"
                                        title="id" id="id" s readonly required>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="titulo" class="col-form-label">titulo:</label>
                                    <input class="form-control" type="text" name="titulo" value="{{titulo}}"
                                        title="Ingresa el titulo de la noticia " id="titulo" maxlength="300"
                                        oninput="this.value = this.value.replace(/[^A-ZÑ a-zñ]/g, '').replace(/(\..*)\./g, '$1');"
                                        required>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="descripcion" class=" col-form-label">Descripción:</label>
                                    <input class="form-control" type="text" name="descripcion" value="{{descripcion}}"
                                        title="Ingrese Descripción De La noticia" id="descripcion" maxlength="1000"
                                        oninput="this.value = this.value.replace(/[^A-ZÑ a-zñ]/g, '').replace(/(\..*)\./g, '$1');"
                                        required>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="display: none;">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="fecha" class="col-form-label">Fecha:</label>
                                    <input class="form-control" type="text" name="fecha" id="fecha" value="{{fecha}}" disabled>
                                </div>
                            </div>
                        </div>
                        <br>

                        <input class="editar" style="width:150px" type="submit" value="Editar">
                        {{/each}}




                    </form>
                    <button style="width:150px; float: right;" class="cancelarbtn"> <a class="cancelar" id="lnkCancelar"
                            href="/noticias"><i class="mdi mdi-table-large-remove">Cancelar</i></a></button>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
</div>
</div>
<!-- container-fluid -->
</div>
<!-- End Page-content -->
</div>

<script>
    window.onload = function () {
        var fechaInput = document.getElementById("fecha");
        var fechaActual = new Date();

        var dia = fechaActual.getDate();
        var mes = fechaActual.getMonth() + 1; // Los meses van de 0 a 11
        var anio = fechaActual.getFullYear();

        var fechaFormateada = anio + '-' + (mes < 10 ? '0' : '') + mes + '-' + (dia < 10 ? '0' : '') + dia;

        fechaInput.value = fechaFormateada;
    };
</script>