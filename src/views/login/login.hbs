    <link rel="stylesheet" href="/assets/js/jquery-ui.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/jquery-ui.min.js"></script>

</head>

<body>
    <div class="authentication-bg min-vh-100">
        <div class="bg-overlay bg-light">
        </div>
        <style>
            
        </style>
        <div class="container">
            <div class="d-flex flex-column min-vh-100 px-3 pt-0">
                <div class="row justify-content-center my-auto">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                            <a href="/" class="d-block auth-logo">
                                <img src="/assets/images/SkylinkX.png" width="100%" alt="" height="75%"
                                    class="auth-logo-dark me-start">
                                <img src="/assets/images/SkylinkX.png" width="100%" alt="" height="75%"
                                    class="auth-logo-light me-start">
                 
                            </a>

                    

                        

                        <div class="card">
                            <style>
                                               /* Cambiar el color de fondo del formulario a negro */
        .card {
            background-color: #000;
            color: #fff; /* Cambiar el color de las letras a blanco */
                        max-width: 500px; /* Ajustar el ancho máximo de la tarjeta */
            margin: 0 auto; /* Centrar la tarjeta horizontalmente */
        }

        /* Aumentar el tamaño del botón "Iniciar sesión" */
        .btn-primary {
            background-color :#000
        }
        .btn-primary:hover{
            background-color: blue
        }

        /* Cambiar el tamaño de la fuente del enlace "Recuperar contraseña" */
        .text-muted.text-decoration-underline {
            font-size: 16px;
            color: #fff;
        }
                            </style>
                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5>Bienvenido</h5>
                                    <p class="text-muted">Inicie sesión para ingresar a la aplicacion SkyLinkX</p>

                                    {{#each error_}}
                                    <label class="alert alert-danger font-size-18" style="text-alaing: center;">

                                        {{this.error1}}
                                    </label>
                                    {{/each}}

                                </div>
                                <div class="p-2">
                                    <form action="/" method="post">

                                        <div class="mb-3">
                                            <label class="form-label" for="username">Identificación</label>
                                            <div class="position-relative input-custom-icon">
                                                <input type="text" class="form-control" id="username" name="username"
                                                    placeholder="Ingresa Tu Cédula" maxlength="15" autofocus required>
                                                <span class="bx bx-user"></span>
                                            </div>
                                        </div>

                                        <label class="form-label" for="password-input">Contraseña</label>
                                        <div class="position-relative auth-pass-inputgroup input-custom-icon">
                                            <span class="bx bx-lock-alt"></span>
                                            <input type="text" class="form-control" id="password-input"  
                                                name="password" placeholder="Ingresa Tu Contraseña " maxlength="25"
                                                required>
                                            <button type="button"
                                                class="btn btn-link position-absolute h-100 end-0 top-0"
                                                id="password-addon">
                                                <i class="mdi mdi-eye-outline font-size-18 text-muted"></i>
                                            </button>         
                                        </div>
                                        </div>

                                        <div class="">
                                            <div class="float-end">
                                                <a href="/recoveryPassword"
                                                    class="text-muted text-decoration-underline ">Recuperar
                                                    contraseña</a>
                                            </div>
                                            <br>
                                        </div>
                                        <div class="mt-3">

                                            <button class="btn btn-primary w-100 waves-effect waves-light"
                                                type="submit">Iniciar sesión</button>
                                        </div>

                                    </form>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center p-0">
                            <script>document.write(new Date().getFullYear())</script> ©SKYLINKX
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- JAVASCRIPT -->
    <script src="/assets/js/axios.min.js"></script>
    <script src="/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/libs/metismenujs/metismenujs.min.js"></script>
    <script src="/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="/assets/libs/eva-icons/eva.min.js"></script>

    <script src="/assets/js/pages/pass-addon.init.js"></script>

</body>

</html>
