<style>
    body {
        text-shadow: 1px 2px 1px gray;
    }

    .row {
        text-align: center;
        color: white !important;
        margin-top: 2px;
        margin-bottom: 2px;

    }

    .form-control {
        width: 100%;
        height: 6%;
        color: black !important;
        text-shadow: 3px 2px 3px gray;
        text-align: center;
        font-weight: bold;
    }

    .table-responsive {
        border-radius: 10px;
        border-color: black;
        border-style: solid;
        border-width: 2px;
        box-shadow: rgb(160, 160, 160) 10px 10px 10px;
        margin-right: 10px;
        margin-left: 10px;
        background-color: black !important;
    }

    .cancelar {
        text-decoration: none;
        color: black !important;
    }

    .cancelarbtn {}

    .cancelarbtn:hover {
        background-color: red !important;
    }

    .agregar {
        cursor: pointer;
        width: 150px;
    }

    .agregar:hover {
        background-color: green !important;
    }
</style>

<body>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Registrar nuevo curso</h4>
                </div>
                <div class="card-body">
                    <form action="/crearcursos" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="titulo_curso" class="col-form-label">titulo_curso:</label>
                                    <input class="form-control" type="text" name="titulo_curso" id="titulo_curso"
                                        maxlength="50" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="descripcion" class="col-form-label">Descripción:</label>
                                    <input class="form-control" type="text" name="descripcion" id="descripcion"
                                        maxlength="400" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="duracion" class="col-form-label">duracion:</label>
                                    <input class="form-control" type="text" name="duracion" id="duracion" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="imagen" class="col-form-label">Imagen URL:</label>
                                    <input class="form-control" type="text" name="imagen" id="imagen" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="enlace_youtube" class="col-form-label">Enlace de YouTube:</label>
                                    <input class="form-control" type="text" name="enlace_youtube" id="enlace_youtube" required>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="puntuacion" class="col-form-label">Puntuación:</label>
                                    <input class="form-control" type="number" name="puntuacion" id="puntuacion" min="1"
                                        max="100" required>
                                </div>
                            </div>
                        </div>
                        <br>
                        <input class="agregar" type="submit" value="crear">

                    </form>
                </div>
            </div>
            <button style="width:150px;" class="cancelarbtn"><a class="cancelar" style="width: 10%" id="lnkCancelar"
                    href="/cursos">
                    <i class="mdi mdi-table-large-remove">Cancelar</i>
                </a></button>
        </div>
    </div>
</body>