    color: rgb(70, 70, 238) ;
}
.descripcioninicio{
    color: rgb(70, 70, 238) ;
}
a{
    text-decoration: none;
    color: #fff;
}
.btnCO{
    background-color: black;

}

.btnCOD{
    background-color: black;
    color: #fff;

}

.btnCOD:hover{
background-color: blue
}
