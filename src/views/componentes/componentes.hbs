<body>

    <div class="objetos">
        
        <h1 class="h1"> Novedades Hardware y Pc</h1>
        <div >
            <button class="btnCO"><a href="/crearcomponentes">crear</a></button>
        </div>
        {{#each querycomponentes}} 
        <div class="confeimg">
        <p style="display: none;">{{id_componenetes}}</p>
        <img src="{{imagen}}">
        <h1 class="tipoinicio"> {{tipo}} </h1>
        <h4 class="nombreinicio"> {{nombre}} </h4>
        <h4 class="fabricanteinicio"> {{fabricante}} </h4>
        <h4 class="precioinicio custom-h4 waves-effect"> {{formatCurrency precio}} </h4>
        <h4 class="descripcioninicio"> {{descripcion}} </h4>
        </div>
        <br>
        <br>       
        </div>
        
        <div>
            
            <button class="btnCOD"><a href="/editarcomponentes/{{id_componenetes}}"><i class="fas fa-edit"></i></a></button>
            <button class="btnCOE" onclick="validarEliminar('{{id_componenetes}}')"><i class="iconof fas fa-trash-alt" style="color: white;"></i></button>

        </div>
        

        {{/each}}
        

        <script>
    //Funcion para confirma sí un usuario va a eliminar un registro
    function validarEliminar(id_componenetes) {

        if (confirm("¿Se eliminará el componente seleccionado, estás seguro de que deseas continuar?")) {

            axios.post('/eliminarcomponentes', {
                id_componenetes: id_componenetes
            })
                .then(function (response) {

                    alert(response.data.mensaje)
                    var link = document.createElement("a");
                    link.href = `/componentes`;
                    link.click();

                })
                .catch(function (response) {

                    alert(response.data.mensaje)
                    var link = document.createElement("a");
                    link.href = `/componentes`;
                    link.click();
                })

        } else {

            var link = document.createElement("a");
            link.href = `/componentes`;
            link.click();
        }

    }

</script>

    
</body>