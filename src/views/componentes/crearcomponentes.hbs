<style>
    body {

    }

    .row {
        text-align: center;
        color: white !important;
        margin-top: 2px;
        margin-bottom: 2px;
        text-shadow: 1px 2px 1px gray;
        
    }

    .form-control {
        width: 100%;
        height: 6%;
        color: black !important;
        text-shadow: 3px 2px 3px gray;
        text-align: center;
        font-weight: bold;
    }

    .table-responsive {
        border-radius: 10px;
        border-color: black;
        border-style: solid;
        border-width: 2px;
        box-shadow: rgb(160, 160, 160) 10px 10px 10px;
        margin-right: 10px;
        margin-left: 10px;
        background-color: black !important;
    }

    .cancelar {
        text-decoration: none;
        color: black !important;
    }

    .cancelarbtn {}

    .cancelarbtn:hover {
        background-color: red !important;
    }

    .agregar {
        cursor: pointer;
        width: 150px;
    }

    .agregar:hover {
        background-color: green !important;
    }
</style>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0/css/select2.min.css" rel="stylesheet"/>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0/js/select2.min.js"></script>
</head>
<body>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Registrar nuevo componente</h4>
                </div>
                <div class="card-body">
                    <form action="/crearcomponentes" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="tipo" class="col-form-label">tipo:</label>
                                    <input class="form-control" type="text" name="tipo" id="tipo" maxlength="50" 
                                        required> 
                                        
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="nombre" class="col-form-label">nombre:</label>
                                    <input class="form-control" type="text" name="nombre" id="nombre" maxlength="400"
                                        required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="fabricante" class="col-form-label">fabricante:</label>
                                    <input class="form-control" type="text" name="fabricante" id="fabricante"  required>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="precio" class="col-form-label">Precio:</label>
                                    <input class="form-control" type="number" name="precio" id="precio" step="0.01"
                                        required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="descripcion" class="col-form-label">descripcion:</label>
                                    <input class="form-control" type="text" name="descripcion" id="descripcion"
                                        required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-lg-12">
                                    <label for="imagen" class="col-form-label">Imagen URL:</label>
                                    <input class="form-control" type="text" name="imagen" id="imagen" required>
                                </div>
                            </div>
                        </div>
                        <br>
                        <input class="agregar" type="submit" value="crear">

                    </form>
                </div>
            </div>
            <button style="width:150px;" class="cancelarbtn"><a class="cancelar" style="width: 10%" id="lnkCancelar"
                    href="/componentes">
                    <i class="mdi mdi-table-large-remove">Cancelar</i>
                </a></button>
        </div>
    </div>
</body>